#include <stdio.h>

int main() {
    char upper;

    printf("Alphabet Facts!\n");
    printf("^^^^^^^^^^^^^^^\n\n");

    printf("Please input an uppercase letter:\n");
    scanf(" %c", &upper);

    printf("Some interesting facts:\n\n");
    printf("  1) The lowercase version of the letter is '%c'.\n\n", upper - 'A' + 'a');
    printf("  2) The letter '%c' comes before '%c' in the alphabet.\n\n", upper - 1, upper);
    printf("  3) The letter '%c' comes after '%c' in the alphabet.\n\n", upper + 1, upper);
    printf("  4) %c is letter number %d in the alphabet!\n", upper, upper - 'A' + 1);

    return 0;
}
