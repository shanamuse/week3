#include <stdio.h>
#include <math.h>

int main() {
    float opposite, adjacent, hypotenuse;

    printf("What is the length of the opposite side?\n");
    scanf("%f", &opposite);

    printf("What is the length of the adjacent side?\n");
    scanf("%f", &adjacent);

    hypotenuse = sqrt(opposite * opposite + adjacent * adjacent);

    printf("The length of the hypotenuse is: %.6f\n", hypotenuse);

    return 0;
}
